<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
	<id>Rapla Binary Distribution</id>
	<formats>
		<format>tar.gz</format>
		<format>zip</format>
	</formats>
	<files>
		<file>
			<source>${project.build.directory}/raplabootstrap-tests.jar</source>
	        <destName>raplabootstrap.jar</destName>
			<outputDirectory></outputDirectory>
		</file>
		<file>
			<source>${rapla.distribution.directory}/contexts/rapla.xml</source>
			<outputDirectory>contexts</outputDirectory>
		</file>
		<file>
			<source>${project.build.directory}/rapla-${version}-war.war</source>
			<destName>rapla.war</destName>
			<outputDirectory>webapps</outputDirectory>
		</file>
		<!-- SH files -->
		<file>
			<source>${rapla.distribution.directory}/templates/scripts/rapla_sh</source>
			<destName>rapla.sh</destName>
			<fileMode>0720</fileMode>
			<lineEnding>lf</lineEnding>
		</file>
		<file>
			<source>${rapla.distribution.directory}/templates/scripts/rapla_sh</source>
			<destName>raplaclient.sh</destName>
			<fileMode>0720</fileMode>
			<lineEnding>lf</lineEnding>
		</file>
		<file>
			<source>${rapla.distribution.directory}/templates/scripts/raplaserver_sh</source>
			<destName>raplaserver.sh</destName>
			<fileMode>0720</fileMode>
			<lineEnding>lf</lineEnding>
		</file>
		<!-- BAT files -->
		<file>
			<source>${rapla.distribution.directory}/templates/scripts/rapla_bat</source>
			<destName>rapla.bat</destName>
			<fileMode>0720</fileMode>
			<lineEnding>crlf</lineEnding>
		</file>		
		<file>
			<source>${rapla.distribution.directory}/templates/scripts/raplaclient_bat</source>
			<destName>raplaclient.bat</destName>
			<fileMode>0720</fileMode>
			<lineEnding>crlf</lineEnding>
		</file>		
		<file>
			<source>${rapla.distribution.directory}/templates/scripts/raplaserver_bat</source>
			<destName>raplaserver.bat</destName>
			<fileMode>0720</fileMode>
			<lineEnding>crlf</lineEnding>
		</file>		
		<file>
			<source>${rapla.distribution.directory}/templates/scripts/raplaimport_bat</source>
			<destName>raplaimport.bat</destName>
			<fileMode>0720</fileMode>
			<lineEnding>crlf</lineEnding>
		</file>		
		<file>
			<source>${rapla.distribution.directory}/templates/scripts/raplaexport_bat</source>
			<destName>raplaexport.bat</destName>
			<fileMode>0720</fileMode>
			<lineEnding>crlf</lineEnding>
		</file>		
	</files>
	<fileSets>
		<fileSet>
			<directory>${rapla.distribution.directory}/data</directory>
			<outputDirectory>data</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/test/etc</directory>
			<outputDirectory>etc</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${rapla.distribution.directory}/logs</directory>
			<outputDirectory>logs</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${rapla.distribution.directory}/service</directory>
			<outputDirectory>service</outputDirectory>
			<includes>
				<include>**/**</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${rapla.distribution.directory}/etc</directory>
			<outputDirectory>etc</outputDirectory>
			<includes>
				<include>*.xml</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/test/resources</directory>
			<outputDirectory>resources</outputDirectory>
			<includes>
				<include>logback.xml</include>
				<include>logback-access.xml</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${rapla.distribution.directory}/</directory>
			<outputDirectory></outputDirectory>
			<includes>
				<include>legal/**</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${rapla.distribution.directory}</directory>
			<outputDirectory></outputDirectory>
			<includes>
				<include>*.txt</include>
			</includes>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<includes>
				<include>*jetty*</include>
			</includes>
			<scope>test</scope>
			<outputDirectory>lib</outputDirectory>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>javax.servlet:javax.servlet-api*</include>
			</includes>
			<scope>provided</scope>
			<outputDirectory>lib</outputDirectory>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>*slf4j*</include>
				<include>*logback*</include>
			</includes>
			<outputDirectory>lib/logging</outputDirectory>
			<scope>provided</scope>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>*hsqldb*</include>
			</includes>
			<outputDirectory>lib/ext</outputDirectory>
			<scope>provided</scope>
		</dependencySet>
	</dependencySets>
	<includeBaseDirectory>false</includeBaseDirectory>
</assembly>